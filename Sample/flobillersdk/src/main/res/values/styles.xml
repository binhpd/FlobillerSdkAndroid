<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- colorPrimary is used, for instance, for the default ActionBar
             (but not Toolbar) background.
              We specify the same color for the mToolbar background in
              mToolbar.xml.. -->
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorMain</item>

        <!-- colorPrimaryDark is used for the status bar (with the
             battery, clock, etc). -->
        <item name="colorPrimaryDark">@color/colorMain</item>

        <!-- colorAccent is used as the default name for
             colorControlActivated which is used to tint widgets. -->
        <item name="colorAccent">@color/colorMain</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="PopupAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="style_edt_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/round_with_border</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_title_item_input</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <dimen name="text_size_title_item_input">16sp</dimen>
</resources>