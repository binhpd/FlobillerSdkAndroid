<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="25dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/magrin_top"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:text="@string/pay"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="@dimen/magrin_top"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="@dimen/size_logo_airtime"
            android:layout_height="@dimen/size_logo_airtime"/>
        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_operator_name_title"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_left"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mobile_number"
        android:textSize="@dimen/text_size_title_item_input"
        android:layout_marginTop="@dimen/magrin_top"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edtPhoneCode"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_input"
            android:background="@drawable/round_with_border"
            android:gravity="center"
            android:textSize="@dimen/text_size_title_item_input"
            android:hint="+xx"
            android:minWidth="100dp"/>
        <EditText
            android:id="@+id/edtPhoneNumber"
            style="@style/style_edt_item"
            android:gravity="center"
            android:minWidth="100dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llPay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_background"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_lock"
            android:layout_marginRight="@dimen/margin_options_payment"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/pay"
            android:layout_marginRight="@dimen/margin_options_payment"
            android:textSize="@dimen/text_size_20sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llMoreOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/or"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_20sp"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tvSendInstroduction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="@color/white"
            android:text="@string/send_introduction"
            android:background="@drawable/ripple_background"
            android:layout_marginRight="@dimen/margin_options_payment"
            android:textSize="@dimen/text_size_20sp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>